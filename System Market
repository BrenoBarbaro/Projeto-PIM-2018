    printf("\n*   5 - Sair                                    *");
    printf("\n*                                               *");
    printf("\n*************************************************");
    printf("\n*   Opcao:                                      *");
    printf("\n*************************************************\n");
    gotoxy(12,12);scanf("%d",&op1);
    switch(op1)
    {
        case 1: saldoDia(); break;

        case 2: produtosVendidos(); break;

        case 3: adicionarProdutos();    break;

        case 4: ExibeProdutos(); system("PAUSE");   break;
    }
}

